		<div class="ad-info"> Cena: {$ad->price} Kč &nbsp;&nbsp;&nbsp;&bull;&nbsp; Region: {$ad->regionName} &nbsp;&nbsp;&nbsp;&bull;&nbsp;
			{$ad->categoryName} </div>
	</div>	<!-- /ad -->
	{/foreach}
</div>	<!-- /table -->




</div>	<!-- /page -->

{/block}
