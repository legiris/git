{block content}

<div id="page">

<h1>Kolobazar</h1>

<div id="top-menu">
<p><a href="{$basePath}/pridat-inzerat/" title="Chci vložit inzerát">Přidat inzerát</a></p>
</div>

<div id="table">
	{foreach $ads as $ad}
